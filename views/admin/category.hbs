    crossorigin="anonymous"></script>

<script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<section>
   
    <div class="container " style="margin-top:10rem ;">
        <div class="row">
            <p>category</p>
        </div>
        <div class="row">
            <h1>{{message}}</h1>
        </div>
        <div class="col-md-12">
            <a href="#" class="btn btn-warning mb-1" name="btnAddMore" data-bs-toggle="modal"
                data-bs-target="#addcategory">add category</a>
            <table class="table mt-5" id="adminProductTable">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Categoryname</th>
                        <th scope="col">id</th>
                    </tr> 
                </thead>
                <tbody>
                    {{#each category}}
                    <tr>
                        <td>{{@index}}</td>
                        <td>{{this.categoryname}}</td>
                        <td>{{this._id}} $</td>

                        {{!-- <td><img src="/productimage/{{this.image}}" alt=""></td> --}}
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>

<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="addcategory" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/admin/category" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col md-2">
                            <label for="">add new category</label>
                            <input type="text" name="categoryname">
                        </div>
                        <div class="col md-2">
                            <img style="width:10rem;height:10rem" alt="" id="imgview1">
                            <input type="file" name="image" class="form-control mb-1" onchange="viewimage(event)">
                        </div>
                    </div>
                    {{!-- <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button> --}}
                    <button type="submit" class="btn btn-success">Add category</button>
                </form>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#adminProductTable').DataTable();
    });

    
    function viewimage(event) {
       document.getElementById('imgview1').src=URL.createObjectURL(event.target.files[0])
    }
  
</script>


