    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"></script>
<section>

    <div class="container " style="margin-top:10rem ;">
        <div class="row">
            <p>Coupons</p>

            <div class="col-md-12">
                <a href="" class="btn btn-warning" style="margin:1rem ;" data-bs-toggle="modal"
                    data-bs-target="#staticBackdrop">Add Coupon</a></td>
                <table class="table mt-5" id="adminProductTable">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">coupon code</th>
                            <th scope="col">discription</th>
                            <th scope="col">discount</th>
                            <th scope="col">delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data}}
                        <tr>
                            <td>{{@index}}</td>
                            <td>{{this.couponCode}}</td>
                            <td>{{this.discription}}</td>
                            <td>{{this.discount}}</td>
                            {{!-- <td><img src="/productimage/{{this.image}}" alt=""></td> --}}
                            <td>
                                <a href="/admin/deletecoupon/{{this._id}}" class="btn btn-danger"
                                    onclick="return confirm('are you sure to delete this coupon ?')">Delete</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>



<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">add coupon</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="p-1" action="/admin/addcoupon" id="addcoupondetails" method="post">

                    <div class="row">


                        <div class="col md-6">

                            <label for="text">coupon code</label>
                            <input type="text" name="couponCode" class="form-control mb-1" placeholder="heading">
                            <label for="text">discription</label>
                            <input type="text" name="discription" class="form-control mb-1" placeholder="about">
                            <label for="text">discount %</label>
                            <input type="text" name="discount" class="form-control mb-1" placeholder="about">
                        </div>
                        <div class="col md-6">
                            <button type="submit" class="btn btn-success mt-4">submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>





<!-- CSS only -->

<script>
    $(document).ready(function () {
        $('#adminProductTable').DataTable();
    });
</script>

<script>
    $().ready(function () {

        $("#addcoupondetails").validate({
            // in 'rules' user have to specify all the constraints for respective fields
            rules: {
                couponCode: {
                    required: true
                },
                discription: {
                    required: true
                },
                discount: {
                    required: true,
                },
                agree: "required"
            },
            // in 'messages' user have to specify message as per rules
            messages: {
                couponCode: {
                    required: 'this feild is requires'
                },
                discription: {
                    required: "this feild is requires"
                },
                discount: {
                    required: 'this feild is requires',
                },
                agree: "Please accept our policy"
            }
        });
    });




</script>
