<script type="text/javascript" charset="utf8"
    src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<section>
    
    <div class="container " style="margin-top:10rem ;">
        <div class="row">
            <p>product details</p>
        </div>
        <div class="col-md-12">
             <a href="/admin/addproducts" class="btn btn-warning" style="margin:1rem ;">Add product</a></td>
            <table class="table mt-5" id="adminProductTable">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">productName</th>
                        <th scope="col">price</th>
                        <th scope="col">color</th>
                        <th scope="col">brand</th>
                        <th scope="col">category</th>
                         <th scope="col">quantity</th>
                        <th scope="col">edit/delete</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each allProducts}}
                    <tr>
                        <td>{{@index}}</td>
                        <td>{{this.productName}}</td>
                        <td>{{this.price}} $</td>
                        <td>{{this.color}}</td>
                       <td>{{this.brand}}</td>
                        <td>{{this.category.categoryname}}</td>
                        <td>{{this.quantity}}</td>
                        {{!-- <td><img src="/productimage/{{this.image}}" alt=""></td> --}}
                        <td><a href="/admin/viewproduct/{{this._id}}" class="btn btn-success">view</a>
                        <a href="/admin/deleteproduct/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you sure to delete {{this.productName}}?')">Delete</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>


<script>
    $(document).ready( function () {
    $('#adminProductTable').DataTable();
} );
</script>

