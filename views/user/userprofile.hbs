<div class="container">
    <div class="row">
        <form class="col-10 mx-auto mt-5" action="/editprofile" method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Name</label>
                    <input value="{{users.fname}}" type="text" class="form-control" name="fname" id="inputName"
                        placeholder="name">
                </div>
                <div class="form-group col-md-10">
                    <label for="inputEmail4">Email</label>
                    <input value="{{users.email}}" type="" class="form-control" name="email" id="inputEmail4"
                        placeholder="Email">
                </div>
            </div>
            <div class="form-group col-md-7">
                <label for="inputAddress">Address</label>
                <input value="{{users.address}}" type="text" class="form-control" name="address" id="inputAddress"
                    placeholder="address">
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputCity">City</label>
                    <input value="{{users.city}}" type="text" class="form-control" name="city" id="inputCity"
                        placeholder="city">
                </div>
                <div class="form-group col-md-4">
                    <label for="inputState">phone</label>
                    <input value="{{users.mobilenumber}}" type="text" class="form-control" name="mobilenumber" id="inputCity"
                        placeholder="mobilenumber">
                </div>
                <div class="form-group col-md-4">
                    <label for="inputZip">pincode</label>
                    <input value="{{users.pincode}}" type="text" class="form-control" name="pincode" id="inputZip"
                        placeholder="pincode">
                    <input value="{{users._id}}" class="invisible" name="_Id" type="text">
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-5">save</button>
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
        </form>
    </div>
