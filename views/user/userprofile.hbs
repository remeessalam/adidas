<!-- Modal -->
<div class="modal fade" id="edituserModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="container">
                    <div class="row">
                        <form class="col-10 mx-auto mt-5" action="/editprofile" method="post">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputEmail4">First Name</label>
                                    <input value="{{users.fname}}" type="text" class="form-control" name="fname"
                                        id="inputName" placeholder="name">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="inputEmail4">Last Name</label>
                                    <input value="{{users.lname}}" type="text" class="form-control" name="lname"
                                        id="inputName" placeholder="Email">
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="gender">Gender</label>
                                <div class="row">
                                    <div class="col-md-3">
                                        <input value="male" type="radio" class="form-control" name="gender" id="gender"
                                            checked>
                                        <label for="gender">Male</label>
                                    </div>
                                    <div class="col-md-3">
                                        <input value="female" type="radio" class="form-control" name="gender"
                                            id="inputAddress">
                                        <label for="gender">Female</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputCity">Date Of Birth</label>
                                    <div class="row">
                                        <div class="col md-2">
                                            <input value="{{dateofbirth}}" type="date" class="form-control"
                                                name="dateofbirth" id="" placeholder="date">
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group col-md-5">
                                    <label for="inputState">phone</label>
                                    <input value="{{users.mobilenumber}}" type="text" class="form-control"
                                        name="mobilenumber" id="inputCity" placeholder="mobilenumber">
                                </div>
                                {{!-- <div class="form-group col-md-4">
                                    <label for="inputZip">pincode</label>
                                    <input value="{{users.pincode}}" type="text" class="form-control" name="pincode"
                                        id="inputZip" placeholder="pincode">
                                    <input value="{{users._id}}" class="invisible" name="_Id" type="text">
                                </div> --}}
                            </div>
                            <button type="submit" class="btn btn-primary mt-1">save</button>
                            <button type="button" class="btn btn-primary mt-1" data-dismiss="modal">Close</button>
                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>